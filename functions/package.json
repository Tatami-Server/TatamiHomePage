{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "build": "cd ../ && npm run build && cd functions",
    "deploy": "npm run cp:dist && firebase deploy --only functions",
    "cp:dist": "npm run build && rm -rf .next && rsync -a ../.next ./ --exclude '.next/cache'",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "18"
  },
  "main": "index.js",
  "dependencies": {
    "firebase-admin": "^11.8.0",
    "firebase-functions": "^4.4.1",
    "minecraft-server-util": "^5.4.4",
    "next": "13.3.0",
    "sharp": "^0.32.5",
    "webpack": "^5.88.2"
  },
  "devDependencies": {
    "firebase-functions-test": "^3.1.0"
  },
  "private": true
}
